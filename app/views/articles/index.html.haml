%section#all-news
  %header
    %h1 Todas as NotÃ­cias
  - for article in @articles
    %section.list
      %aside
        - if article.image?
          = link_to image_tag(article.image.url(:small), class: 'aside'), article
        - else
          - link = capture do
            .date
              - date = article.published_at.to_date
              %p= date.year
              %p= l date, format: :month
              %p= date.day
          = link_to link, article
      %header
        %h1.subtitle= link_to article.title, article
        %h2.subtitle= article.headline
      %article
        %p= truncate_html raw(article.body), :length => 315
      %footer
        %span= l article.published_at, format: :long
    %br.clear
